{
  "name": "vscode-lua-testing-adapter",
  "displayName": "Lua Testing Explorer",
  "description": "Simple testing framework for lua inside Visual Studio Code",
  "icon": "img/icon.png",
  "author": "Marco BÃ¶ttcher <spacesinmotion@gmail.com>",
  "publisher": "spacesinmotion",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "test",
    "testing",
    "lua"
  ],
  "main": "out/main.js",
  "scripts": {
    "clean": "rimraf out *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "vscode-test-adapter-api": "^1.7.0",
    "vscode-test-adapter-util": "^0.7.0"
  },
  "devDependencies": {
    "@types/vscode": "~1.23.0",
    "typescript": "^3.7.5",
    "vsce": "^1.65.0"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Lua Testing Explorer configuration",
      "properties": {
        "luatesting.luaexecutatble": {
          "description": "The path to the lua execution file",
          "type": "string",
          "scope": "resource",
          "default": "lua"
        },
        "luatesting.logpanel": {
          "description": "write diagnotic logs to an output panel",
          "type": "boolean",
          "scope": "resource"
        },
        "luatesting.logfile": {
          "description": "write diagnostic logs to the given file",
          "type": "string",
          "scope": "resource"
        }
      }
    }
  }
}